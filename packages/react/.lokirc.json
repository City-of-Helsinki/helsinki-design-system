{
  "chromeRetries": 2,
  "chromeDockerImage": "browserless/chrome:latest",
  "configurations": {
    "chrome.laptop": {
      "target": "chrome.docker",
      "width": 1366,
      "height": 768,
      "mobile": false
    },
    "chrome.iphone7": {
      "target": "chrome.docker",
      "preset": "iPhone 7"
    }
  },
  "skipStories": "Icons/.*|Button/*|Tag/*|Hero/*|Koros/*|Checkbox/*|SelectionGroup/*|Breadcrumb/*|TextInput/*|FileInput/*|NumberInput/*|PasswordInput/*|PhoneInput/*|TimeInput/*|TextArea/*|Table/*|Notification/*|Select/*|CookieConsentCore/*|CookieConsent/*|DateInput/*",
  "pixelmatch": {
    "threshold": 0.2,
    "alpha": 1,
    "diffColor": [255, 0, 255]
  }
}
