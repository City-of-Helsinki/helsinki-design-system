{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["es6", "dom", "dom.iterable"],
    "module": "ES6",
    "moduleResolution": "Node",
    "outDir": "lib",
    "resolveJsonModule": true,
    "stripInternal": true,
    "target": "ES6",
    // "declarationDir": "hds-react",
    // "sourceMap": true,
  },
  "include": ["src/index.ts", "src/global.d.ts"],
  // "include": [
  //   "src/**/*.ts",
  //   "src/**/*.tsx",
  //   "src/**/*.d.ts",
  //   ".storybook/**/*.ts",
  //   ".storybook/**/*.tsx"
  // ],
  // "exclude": ["node_modules", "lib", "dist", "src/utils/*", "src/hooks/*", "src/internal/*"],
  "compileOnSave": false,
  "buildOnSave": false
}
