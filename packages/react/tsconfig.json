{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "Node",
    "target": "es5",
    "lib": ["dom", "es2015"],
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": ["**/*.test.tsx", "**/*.stories.tsx"],
  "compileOnSave": false,
  "buildOnSave": false
}
