{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "Node",
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable"],
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "lib",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "stripInternal": true
  },
  "include": ["src/*", "./global.d.ts"],
  "compileOnSave": false,
  "buildOnSave": false
}
