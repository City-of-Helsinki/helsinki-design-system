{
  "name": "hds-site",
  "private": true,
  "description": "Documentation for Helsinki Design System",
  "version": "0.1.0",
  "dependencies": {
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "gatsby": "^4.3.0",
    "gatsby-plugin-image": "^2.3.0",
    "gatsby-plugin-manifest": "^4.3.0",
    "gatsby-plugin-mdx": "^3.3.0",
    "gatsby-plugin-offline": "^5.3.0",
    "gatsby-plugin-react-helmet": "^5.3.0",
    "gatsby-plugin-sass": "^5.3.0",
    "gatsby-plugin-sharp": "^4.3.0",
    "gatsby-remark-autolink-headers": "^5.8.0",
    "gatsby-source-filesystem": "^4.3.0",
    "gatsby-transformer-sharp": "^4.3.0",
    "html-validate": "^6.5.0",
    "npm-check-updates": "^12.0.3",
    "prism-react-renderer": "^1.3.1",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-live": "^2.4.1",
    "sanitize-html": "^2.7.0",
    "sass": "^1.49.9"
  },
  "devDependencies": {
    "eslint-config-react-app": "^7.0.1",
    "hds-core": "^1.15.0",
    "hds-design-tokens": "^1.15.0",
    "hds-react": "^1.15.0",
    "prettier": "2.5.1",
    "stylelint": "^14.8.3",
    "stylelint-config-standard-scss": "^3.0.0"
  },
  "keywords": [
    "gatsby",
    "hds"
  ],
  "license": "0BSD",
  "scripts": {
    "build": "yarn lint && gatsby build",
    "develop": "gatsby develop -o",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "start": "gatsby develop -o",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1",
    "link-react": "rm -rf node_modules/hds-react/* && cp -r ../packages/react/lib/* node_modules/hds-react/",
    "lint:js": "eslint . --ext js",
    "lint:scss": "stylelint \"**/*.scss\"",
    "lint": "yarn lint:js && yarn lint:scss"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/City-of-Helsinki/helsinki-design-system"
  },
  "bugs": {
    "url": "https://github.com/City-of-Helsinki/helsinki-design-system/issues"
  }
}
