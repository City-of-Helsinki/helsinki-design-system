{
  "name": "root",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/core",
    "packages/react",
    "packages/site"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:site": "lerna run --scope site build",
    "start:site": "lerna run --scope site start",
    "build:storybook": "lerna run --scope hds-react build-storybook",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "start:react": "lerna run --scope hds-core --scope hds-react start --parallel",
    "build:react": "lerna run --scope hds-core --scope hds-react build",
    "husky:pre-commit": "lerna run --concurrency 1 --stream pre-commit",
    "husky:pre-push": "lerna run --concurrency 1 --stream pre-push"
  },
  "devDependencies": {
    "husky": "^3.0.9",
    "lerna": "^3.16.4"
  }
}
